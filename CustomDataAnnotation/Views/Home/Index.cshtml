@model CustomDataAnnotation.Models.Booking
@{
    ViewData["Title"] = "Home Page";
}

<h1>Hotel Booking Form</h1>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    
    @Html.ValidationSummary(false, "", new { @class="text-danger"})

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(x => x.Name)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control"} })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(x => x.CheckIn)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(x => x.CheckIn, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(x => x.CheckOut)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(x => x.CheckOut, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(x => x.LocationCode)
            </div>
            <div class="col-md-4">
                @Html.EditorFor(x => x.LocationCode, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <br>
        <div class="row">
            <button type="submit" name="submit" class="btn btn-info">Submit</button>
        </div>


    </div>
}